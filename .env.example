# TeamSnap API Configuration
# Get these from https://www.teamsnap.com/api/v3/me/oauth_applications
TEAMSNAP_CLIENT_ID=your_teamsnap_client_id_here
TEAMSNAP_CLIENT_SECRET=your_teamsnap_client_secret_here
TEAMSNAP_REDIRECT_URI=https://localhost:5000/auth/callback

# Flask Configuration
# Generate a secure secret key for production
SECRET_KEY=your-secret-key-here
FLASK_DEBUG=True

# Database
# For production, use PostgreSQL: postgresql://user:password@host:port/database
DATABASE_URL=sqlite:///lineup.db